
type Query {
    getUsers: [User]
    getAllUsers: [User]
    getById(id: ID!): User
    getByEmail(email: String!): User
}

type User {
    id: String
    name: String
    last_name: String
    birthday: String
    city_birth: String
}

type Mutation{
    createUser(input: createUserInput): User
    updateUser(input: updateUserInput): User
    deleteUser(id: ID!): User
}

# Inputs Schema

input  userInput{
    name: String!
    last_name: String!
    birthday: String!
    city_birth: String!
}

input createUserInput{
    name: String!
    last_name: String!
    birthday: String!
    city_birth: String!
}

input updateUserInput{
    id: ID!
    name: String
    last_name: String
    birthday: String
    city_birth: String
}

